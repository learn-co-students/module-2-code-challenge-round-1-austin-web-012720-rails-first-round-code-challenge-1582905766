<h1>Edit Heroine</h1>
<% if @heroine.errors.any? %>
<ul>
  <% @heroine.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />
<br>
  <%= f.label :super_name %>:
  <%= f.text_field :super_name %><br />
<br>
<%= collection_select(:power, :power_id, Power.all, :id, :name) %>
<br>
<br>
  <%= f.submit %>
<% end %>
<br>
<%=link_to "Back", heroines_path%>
<h1>Create a Heroine</h1>

<%= form_for(@heroine) do |f| %>

  <% if @heroine.errors.any? %>
      <div id="error_explanation">
        <h3>Please fix the following errors:</h3>
        <ul>
          <% @heroine.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <%= f.label :super_name %>
  <%= f.text_field :super_name %><br>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :power %>
  <%= f.collection_select :power_ids, Power.all, :id, :name %><br>

  <%= f.submit %>
<% end %>

<h1>Create a Heroine</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@heroine) do |f| %>
  <p><%= f.label :name %><br>
  <%= f.text_field :name %></p>

  <p><%= f.label :super_name %><br>
  <%= f.text_field :super_name %></p>

  <p><%= f.label :power %><br>
  placeholder collection_select</p>

  <%= f.submit %>
<% end %>
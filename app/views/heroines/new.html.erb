<%= form_for @herione do |h| %>
    <%= h.label :name %>
    <%= h.text_field :name %>
    <br />
    <%= h.label :super_name %>
    <%= h.text_field :super_name %>
    <br />
    <%= h.label :power %>
    <%= collection_select(:power, :power_id, Power.all, :id, :name) %> 
    <br />
    <%= h.submit %>

    <% if flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
    <% end %>
<% end %>